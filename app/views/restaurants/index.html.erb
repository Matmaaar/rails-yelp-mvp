

<div class="container mt-3">
<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <h1>All Restaurants</h1>

<%@restaurants.each do |restaurant| %>
    <h2 class="display-5"><%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none" %></h2>
    <%= link_to "Delete",restaurant_path(restaurant),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none"
%>
<% end %>

</div>
</div>
</div>
